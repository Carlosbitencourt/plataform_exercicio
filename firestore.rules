rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'agenciaconativa@gmail.com' ||
        request.auth.token.email == 'admin@fitreward.com' // Keeping a fallback just in case
      );
    }

      // Users collection
    match /users/{userId} {
      // Public read needed for check-in page lookup.
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // TimeSlots collection
    match /timeSlots/{slotId} {
      allow read: if true; // Public needs to read slots for check-in validation
      allow write: if isAdmin();
    }

    // CheckIns collection
    match /checkIns/{checkInId} {
      allow read: if true; // Public needs to check if already checked in today
      // Allow create if valid structure? Or just authenticated?
      // Public Check-In page does NOT use Auth if it relies on URL token.
      // But we implemented CheckInPage without Firebase Auth login for the user scanning QR.
      // Wait, CheckInPage uses `addCheckIn`. Does it require auth?
      // If `CheckInPage` is public, it might not be authenticated as Admin.
      // If we use Firebase anon auth or just open write for specific format?
      // Since `CheckInPage` is "public" (no login screen for user), we might need `allow create: if true` for checkIns
      // but restricted by logic in Cloud Functions or refined here.
      // For simplicity in this "integration" phase without backend functions:
      allow create: if true; 
      allow update, delete: if isAdmin();
    }

    // Distributions collection
    match /distributions/{distId} {
      allow read, write: if isAdmin();
    }

    // QRCodes collection
    match /qrCodes/{qrId} {
      allow read: if true; // Public needs to check active QR
      allow write: if isAdmin();
    }
  }
}
